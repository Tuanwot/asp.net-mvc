<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @if (Session["ID"] != null)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" *@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @switch ((string)Session["Role"])
                        {
                            case "admin":
                                <li>@Html.ActionLink("Manage account", "TrainingTraineelist", "Manage")</li>
                                break;
                            case "training":
                                <li>@Html.ActionLink("list of Trainee", "TraineeList", "Manage")</li>
                                <li>@Html.ActionLink("list of trainer", "TrainingTraineelist", "Manage")</li>
                                <li>@Html.ActionLink("Manage course", "ListOfCourse", "Manage")</li>
                                <li>@Html.ActionLink("Manage categorycourse", "TrainingTraineelist", "Manage")</li>

                                break;
                            default:
                                <li>@Html.ActionLink("View Course", "ListOfCourse", "Manage")</li>
                                break;


                        }


                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    }
        <div class="container body-content">
            @RenderBody()


        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
